# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=(
    libarchive
    libarchive-dev
)
pkgver=3.3.1
pkgrel=1
pkgdesc='Multi-format archive and compression library'
arch=(x86_64)
url='http://www.libarchive.org'
license=(BSD)
groups=(base)
depends=()
makedepends=(
    libacl-dev
    libattr-dev
    liblzma-dev
    nettle-dev
    zlib-dev
)
options=()
changelog=ChangeLog
source=(
    "http://www.libarchive.org/downloads/libarchive-${pkgver}.tar.gz"
)
sha256sums=(
    29ca5bd1624ca5a007aa57e16080262ab4379dbf8797f5c52f7ea74a3b0424e7
)


build() {
    cd "${srcdir}/${pkgbase}-${pkgver}"
    # fix for musl
    sed -i 's@HAVE_LCHMOD@&_DISABLE@' libarchive/archive_write_disk_posix.c
    # fixes for busybox xz
    sed -i 's@ -qq@@' libarchive/archive_read_support_filter_xz.c
    sed -i 's@xz -d@unxz@' libarchive/archive_read_support_filter_xz.c
    sed -i 's@lzma -d@unlzma@' libarchive/archive_read_support_filter_xz.c
    ./configure \
      --prefix='' \
      --enable-static \
      --enable-shared
    make V=1
}

package_libarchive() {
    pkgfiles=(
        bin
        lib/*.so.*
        share/man/man1
        share/man/man5/libarchive-formats*
    )
    depends=(
        libacl
        libattr
        musl
        nettle
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdirbase}/destdir" install

    cd "${pkgdirbase}/destdir"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}

package_libarchive-dev() {
    depends=(libarchive)
    pkgfiles=(
        include
        lib/*.a
        lib/*.so
        lib/pkgconfig
        share/man/man3
    )
    depends=(libarchive)

    cd "${pkgdirbase}/destdir"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}
