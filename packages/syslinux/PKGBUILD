# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=syslinux
pkgver=6.03
pkgrel=1
pkgdesc='Lightweight Linux bootloaders.'
arch=(x86_64)
url=http://syslinux.org/
license=(BSD)
groups=(base)
depends=(musl perl)
makedepends=(perl libuuid-dev)
options=()
changelog=ChangeLog
source=(
    "https://www.kernel.org/pub/linux/utils/boot/${pkgname}/${pkgname}-${pkgver}.tar.xz"
)

sha256sums=(
    '26d3986d2bea109d5dc0e4f8c4822a459276cf021125e8c9f23c3cca5d8c850e'
)


build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i -e '/^BINDIR/s@=.*@= /bin@' \
           -e '/^LIBDIR/s@=.*@= /lib@' \
           -e '/^DATADIR/s@=.*@= /share@' \
           -e '/^MANDIR/s@=.*@= /share/man@' \
           -e '/^INCDIR/s@=.*@= /include@' mk/syslinux.mk com32/lib/Makefile
    make MAKEFLAGS='' -j1 bios installer
}

package() {
    pkgfiles=(
        bin
        sbin
        share
    )
    cd "${srcdir}/${pkgname}-${pkgver}"
    make INSTALLROOT="${pkgdirbase}/dest" MAKEFLAGS='' -j1 bios install
    cd "${pkgdirbase}/dest"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dump "${pkgdir}"
}
