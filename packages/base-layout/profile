# A generic personal profile settings file
# intended to be usable by mksh and bash

# Prompt settings
hn=$(hostname -s)
R="\033[00m"
M="\033[32m"
P='$'

[ "${USER}" = "root" ] && M="\033[31m" && P='#'

set_ps1() {
    printf "${hn} ${M}|\033[36m ${PWD}${R}\n${P} "
}

PS1='$(set_ps1)'
PS2=" > "

# Aliases
alias ll='ls -l'

# Misc environment variables
PATH="/bin:/sbin"
export PATH
