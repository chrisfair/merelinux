pkgname=('curl' 'libcurl' 'libcurl-devel')
pkgver=7.36.0
pkgrel=1
pkgdesc='An API for writing text-based user interfaces.'
arch=('x86_64')
url='http://curl.haxx.se'
license=('GPL2')
groups=('base')
depends=()
makedepends=(
	'musl-devel'
	'binutils'
	'gcc'
	'linux-headers'
	'openssl-devel'
	'zlib-devel'
)
options=()
changelog=ChangeLog

source=(
	"${url}/download/${pkgname}-${pkgver}.tar.gz"
)
sha256sums=(
	'33015795d5650a2bfdd9a4a28ce4317cef944722a5cfca0d1563db8479840e90'
)


build() {
	cd "${srcdir}/${pkgbase}-${pkgver}"
	rm src/tool_hugehelp.c
	LDFLAGS='-fPIC -Wl,-static' \
	./configure \
	  --prefix=/ \
	  --enable-static \
	  --disable-shared \
	  --with-ssl \
	  --with-ca-bundle=/etc/certs/ca-bundle.crt
	make $MAKEFLAGS
	install -v src/curl{,-static}
	unset LDFLAGS
	make clean
	./configure \
	  --prefix=/ \
	  --enable-static \
	  --enable-shared \
	  --with-ssl \
	  --with-ca-bundle=/etc/certs/ca-bundle.crt
	make $MAKEFLAGS
}

package_curl() {
	pkgfiles=(
		'bin/curl'
		'share/man/man1/curl.1.*'
	)
	depends=(
		'ca-certificates'
	)
	
	cd "${srcdir}/${pkgbase}-${pkgver}"
	make DESTDIR="${pkgdir}-tmp" install
	install -m0755 -v src/curl-static "${pkgdir}-tmp/bin/curl"
	cd "${pkgdir}-tmp"
	find $(printf "%s\n" ${pkgfiles[@]}) | cpio -dumpv "${pkgdir}"
}

package_libcurl() {
	pkgfiles=(
		'lib/libcurl.so.*'
	)
	depends=(
		'musl'
		'openssl'
		'zlib'
	)

	
	cd "${srcdir}/${pkgbase}-${pkgver}"
	make DESTDIR="${pkgdir}-tmp" install
	cd "${pkgdir}-tmp"
	find $(printf "%s\n" ${pkgfiles[@]}) | cpio -dumpv "${pkgdir}"
}

package_libcurl-devel() {
	pkgfiles=(
		'bin/curl-config'
		'include'
		'lib/*.a'
		'lib/*.so'
		'lib/pkgconfig'
		'share/aclocal'
		'share/man/man3'
		'share/man/man1/curl-config.1.*'
	)
	depends=(
		'libcurl'
	)
	cd "${srcdir}/${pkgbase}-${pkgver}"
	make DESTDIR="${pkgdir}-tmp" install
	cd "${pkgdir}-tmp"
	find $(printf "%s\n" ${pkgfiles[@]}) | cpio -dumpv "${pkgdir}"
}
