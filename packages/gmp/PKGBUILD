pkgname=(gmp gmp-devel)
pkgver=6.0.0
pkgrel=1
pkgdesc='A free library for arbitrary precision arithmetic.'
arch=('x86_64')
url='http://gmplib.org'
license=(LGPL BSD)
groups=(base)
depends=()
makedepends=(gcc-c++)
options=()
changelog=ChangeLog
source=(
	"https://gmplib.org/download/gmp/${pkgname}-${pkgver}a.tar.xz"
)
sha256sums=(
    '9156d32edac6955bc53b0218f5f3763facb890b73a835d5e1b901dcf8eb8b764'
)


build() {
	cd "${srcdir}/${pkgbase}-${pkgver}"
	./configure --prefix='' \
      --enable-cxx \
      --target=${arch}-unknown-linux-gnu \
      --host=${arch}-unknown-linux-gnu \
      --build=${arch}-unknown-linux-gnu
	make $MAKEFLAGS
}

package_gmp() {
	pkgfiles=(
		lib/libgmp.so.*
        lib/libgmpxx.so.*
	)
    depends=(musl)	
	cd "${srcdir}/${pkgbase}-${pkgver}"
	make DESTDIR="${pkgdir}-tmp" install
	cd "${pkgdir}-tmp"
	find ${pkgfiles[@]} | cpio -pudmv "${pkgdir}"
}

package_gmp-devel() {
    pkgfiles=(
        include
        lib/libgmp.so
        lib/libgmp.a
        lib/libgmpxx.so
        lib/libgmpxx.a
    )
	depends=(gmp)
	cd "${srcdir}/${pkgbase}-${pkgver}"
	make DESTDIR="${pkgdir}-tmp" install
	cd "${pkgdir}-tmp"
	find ${pkgfiles[@]} | cpio -pudmv "${pkgdir}"
}
