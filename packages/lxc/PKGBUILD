# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=(lxc lxc-dev)
pkgver=2.0.8
pkgrel=1
pkgdesc='A userspace interface for the Linux kernel containment features'
arch=(x86_64)
url='https://linuxcontainers.org/'
license=(GPL2)
groups=(base)
depends=()
makedepends=(libcap-dev)
options=()
changelog=ChangeLog
source=(
    "https://linuxcontainers.org/downloads/lxc/lxc-${pkgver}.tar.gz"
    lxc-merebuild
)

sha256sums=(
    0d8e34b302cfe4c40c6c9ae5097096aa5cc2c1dfceea3f0f22e3e16c4a4e8494
    6709aa2010c69e3f914c2d302cf1329a4e365dd9c56b42c3c1484007e17c5d8c
)


build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    sed -i '/if_bridge.h/d' src/lxc/lxc_user_nic.c
    ./configure \
      --prefix='' \
      --libexecdir=/lib/lxc
    make
}

package_lxc() {
    pkgfiles=(
        bin
        etc
        lib/liblxc.so.*
        lib/lxc
        share/lxc
        var
    )
    options+=(emptydirs)
    depends=(
        acl
        libattr
        libcap
        musl
    )
    backup=(etc/lxc/default.conf)
    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdirbase}/dest" install
    cd "${pkgdirbase}/dest"
    find ${pkgfiles[@]} | cpio -dump "${pkgdir}"
    set -o pipefail
    install -m 0755 "${srcdir}/lxc-merebuild" "${pkgdir}/share/lxc/templates/"
}

package_lxc-dev() {
    pkgfiles=(
        include
        lib/liblxc.so
        lib/pkgconfig
    )
    depends=(lxc libcap-dev)
    cd "${pkgdirbase}/dest"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dump "${pkgdir}"
}
