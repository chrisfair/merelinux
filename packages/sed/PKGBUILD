#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068
# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=(sed)
pkgver=4.2.2
pkgrel=1
pkgdesc='stream editor'
arch=(x86_64)
url='http://www.gnu.org/software/sed'
license=(GPL3)
groups=(base)
depends=()
makedepends=()
options=()
changelog=ChangeLog
source=(
    "http://ftp.gnu.org/gnu/${pkgbase}/${pkgbase}-${pkgver}.tar.bz2"
)

sha256sums=(
    'f048d1838da284c8bc9753e4506b85a1e0cc1ea8999d36f6995bcb9460cddbd7'
)


build() {
    cd "${srcdir}/${pkgbase}-${pkgver}" || return 1
    LDFLAGS="-Wl,-static" \
    ./configure --prefix=''
    make
}

package() {
    cd "${srcdir}/${pkgbase}-${pkgver}" || return 1
    make DESTDIR="$pkgdir" install
    rm -rf "${pkgdir:?}"/{lib,share}
}
