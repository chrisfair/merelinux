# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=perl
pkgver=5.24.1
pkgrel=1
pkgdesc='An API for writing text-based user interfaces.'
arch=('x86_64')
url='http://www.perl.org'
license=('GPL2')
groups=('base')
depends=(musl)
makedepends=(zlib-dev)
options=()
changelog=ChangeLog

source=(
    "http://www.cpan.org/src/5.0/${pkgname}-${pkgver}.tar.bz2"
)
sha256sums=(
    482ac5dca262b57d26c381382a3e057b22ede631fcce32523c004b8bf773f6f0
)


build() {
    cd "${srcdir}/${pkgbase}-${pkgver}"
    for file in `grep -l -r "/usr" .` ; do
        sed -i -e 's@/usr/local@@g' -e 's@/usr@@g' $file
    done
    export BUILD_ZLIB=False
    CFLAGS="$CFLAGS" ./configure.gnu \
      -des -Dprefix=/ \
      -Dcc="gcc -D_GNU_SOURCE" \
      -Dbin=/bin \
      -Dinstallsitebin=/bin \
      -Dvendorprefix=/ \
      -Dprivlib=/lib/perl5/${pkgver} \
      -Darchlib=/lib/perl5/${pkgver}/${arch}-linux \
      -Dsitelib=/lib/perl5/site_perl/${pkgver} \
      -Dvendorlib=/lib/perl5/vendor_perl/${pkgver} \
      -Dvendorarch=/lib/perl5/vendor_perl/${pkgver}/${arch}-linux \
      -Dscriptdir=/bin \
      -Dsitescript=/bin \
      -Dvendorbin=/bin \
      -Dvendorscript=/bin \
      -Dman1dir=/share/man/man1 \
      -Dman3dir=/share/man/man3 \
      -Dpager="/bin/less -I" \
      -Dusethreads \
      -Duseshrplib
    make
}

check() {
    cd "${srcdir}/${pkgbase}-${pkgver}"
    # make test
}

package() {
    pkgfiles=(
        'bin'
        'lib'
        'share'
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    rm -rf "share/man"
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}
