pkgname=(php php-fpm php-dev)
pkgver=5.6.7
mongover=1.6.6
yamlver=1.2.0
pkgrel=2
pkgdesc='The PHP scripting language'
arch=(x86_64)
url='http://www.php.net'
license=(PHP)
groups=(base)
depends=()
makedepends=(
    libcurl-dev
    libtool
    libxml2-dev
    libyaml-dev
    gettext
    openssl-dev
    pkgconf
    zlib-dev
)
options=()
changelog=ChangeLog

source=(
    "http://php.net/distributions/php-${pkgver}.tar.bz2"
    "https://pecl.php.net/get/mongo-${mongover}.tgz"
    "https://pecl.php.net/get/yaml-${yamlver}.tgz"
)
sha256sums=(
    02954fb74c61a7879d48ebdcd4ecb78aa0056f4215ca9b096232de28eb8f17bc
    8552b100231baf16e49c8d66a6ac064c36edc3172f6ab5a0ea924acc289eb0d8
    fdf0eec6bf16b0c45e58076a2048f96140a778463724fb82ab49ab5fb4c7e19a
)


build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    # Fix warnings about including sys/poll.h
    sed -i '/sys\/poll.h/s@sys/@@' main/php_network.h \
      sapi/cgi/fastcgi.c main/network.c sapi/fpm/fpm/fastcgi.c

    tar -xf "${srcdir}/mongo-${mongover}.tgz"
    mv "mongo-${mongover}" ext/mongo
    # Fix namespace collision with ext/hash
    sed -i -e 's@php_hash_copy(@php_hash_copy_m(@' \
           -e 's@php_hash_copy,@php_hash_copy_m,@' \
           ext/mongo/contrib/crypto.c

    tar -xf "${srcdir}/yaml-${yamlver}.tgz"
    mv "yaml-${yamlver}" ext/yaml

    rm configure
    ./buildconf --force

    sed -i 's@CURL_CONFIG --libs@CURL_CONFIG --static-libs@' configure
    CFLAGS="$CFLAGS -fPIC --static" \
    ./configure \
      --prefix=/ \
      --with-config-file-path=/etc/php \
      --disable-all \
      --disable-cgi \
      --disable-shared \
      --enable-static \
      --enable-cli \
      --enable-ctype \
      --enable-filter \
      --enable-fpm \
      --enable-hash \
      --enable-json \
      --enable-libxml \
      --enable-mbstring \
      --enable-mbregex \
      --enable-mongo \
      --enable-pdo \
      --enable-phar \
      --enable-session \
      --enable-tokenizer \
      --enable-xml \
      --with-curl \
      --with-iconv \
      --with-gettext \
      --with-mysql=mysqlnd \
      --with-mysqli=mysqlnd \
      --with-pdo-mysql=mysqlnd \
      --with-openssl \
      --with-yaml \
      --with-zlib \
      ac_cv_crypt_des=no \
      ac_cv_crypt_ext_des=no
    make $MAKEFLAGS
}

package_php() {
    pkgfiles=(
        bin
    )
    options+=(upx)

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make INSTALL_ROOT="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    rm bin/php{-config,ize}
    # Fix broken symlink
    rm bin/phar
    ln -s phar.phar bin/phar
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}

package_php-fpm() {
    pkgfiles=(
        etc
        sbin
    )
    options+=(upx)

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make INSTALL_ROOT="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}

package_php-dev() {
    depends=(
        php
    )
    pkgfiles=(
        bin/php-config
        bin/phpize
        include
        lib/php/build
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make INSTALL_ROOT="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}
