# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=make
pkgver=4.2.1
pkgrel=1
pkgdesc='A tool to control the generation of executables'
arch=(x86_64)
url='http://www.gnu.org/software/make/'
license=(GPL3)
groups=(base)
depends=()
makedepends=(gettext libtool)
options=()
changelog=ChangeLog
source=(
    "http://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.bz2"
)

sha256sums=(
    d6e262bf3601b42d2b1e4ef8310029e1dcf20083c5446b4b7aa67081fdffc589
)


build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    autoreconf -i
    LDFLAGS='-Wl,-static' ./configure --prefix='' \
        --disable-load
    make V=1
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install
    rm -rf "$pkgdir/share/info"
}
