pkgname=(execline execline-dev)
pkgver=2.1.3.0
pkgrel=1
pkgdesc='a (non-interactive) scripting language.'
arch=(x86_64)
url='http://skarnet.org/software/execline/'
license=(ISC)
groups=(base)
depends=()
makedepends=(skalibs-dev)
options=()
changelog=ChangeLog
source=(
    "http://skarnet.org/software/execline/execline-${pkgver}.tar.gz"
)

sha256sums=(
    572448cf236ce7a17f8666b4bb05f3319fe6b559d7f89b797659886bdf21e54f
)


build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure \
      --prefix=/ \
      --enable-static-libc
    make
}

package_execline() {
    pkgfiles=(
        bin
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
}

package_execline-dev() {
    pkgfiles=(
        include
        lib
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    mv lib/execline/libexecline.a lib
    rm -rf lib/execline
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
}
