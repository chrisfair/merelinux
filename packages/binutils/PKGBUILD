#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068
# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

rationale='This is part of the core toolchain'
pkgname=binutils
pkgver=2.32
pkgrel=1
pkgdesc='A collection of binary tools, including a linker and an assembler'
arch=('x86_64')
url='http://www.gnu.org/software/binutils/'
license=('GPL3')
groups=('base')
depends=(musl)
makedepends=(zlib-dev)
options=()
changelog=ChangeLog
source=(
    "http://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.xz"
)

sha256sums=(
    0ab6c55dd86a92ed561972ba15b9b70a8b9f75557f896446c82e8b36e473ee04
)



build() {
    cd "${srcdir}/${pkgname}-${pkgver}" || return 1
    mkdir build
    cd build || return 1
    ../configure --prefix='' \
      --build="$CHOST" \
      --host="$CHOST" \
      --target="$CHOST" \
      --enable-gold \
      --enable-gold=default \
      --enable-plugins \
      --enable-shared \
      --disable-werror \
      --disable-nls \
      --with-system-zlib \
      --mandir=/share/man
    make tooldir=/
}

check() {
    cd "${srcdir}/${pkgname}-${pkgver}/build" || return 1
    #MAKEFLAGS='' make LDFLAGS='' check
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}/build" || return 1
    make DESTDIR="$pkgdir" tooldir=/ install
    rm -rf "${pkgdir}/info"
}
