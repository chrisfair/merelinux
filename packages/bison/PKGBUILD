#!/bin/bash
# shellcheck disable=SC2034,SC2154
# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=(bison bison-dev)
pkgver=3.3.2
pkgrel=2
pkgdesc='A general-purpose parser generator.'
arch=('x86_64')
url='http://www.gnu.org/software/bison/'
license=('GPL3')
groups=('base')
depends=(m4 musl)
makedepends=(perl)
options=()
changelog=ChangeLog
source=(
    "http://ftp.gnu.org/gnu/${pkgname[0]}/${pkgname[0]}-$pkgver.tar.xz"
)

sha256sums=(
    039ee45b61d95e5003e7e8376f9080001b4066ff357bde271b7faace53b9d804
)

build() {
    std_build
}

package_bison() {
    pkgfiles=(
        bin/bison
        bin/yacc
        share/bison
        share/man/man1/bison.1
        share/man/man1/yacc.1
        share/aclocal/bison-i18n.m4
    )
    std_package
}

package_bison-dev() {
    pkgfiles=(
        lib/liby.a
    )
    std_split_package
}
