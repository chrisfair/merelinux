pkgname=(libyaml libyaml-dev)
pkgver=0.1.5
pkgrel=1
pkgdesc='A YAML 1.1 parser and emitter.'
arch=(x86_64)
url='http://pyyaml.org/wiki/LibYAML'
license=(MIT)
groups=(base)
depends=()
makedepends=()
options=()
changelog=ChangeLog
source=(
    "http://pyyaml.org/download/libyaml/yaml-${pkgver}.tar.gz"
)

sha256sums=(
    fa87ee8fb7b936ec04457bc044cd561155e1000a4d25029867752e543c2d3bef
)


build() {
    cd "${srcdir}/yaml-${pkgver}"
      ./configure --prefix='' \
        --enable-static
    make $MAKEFLAGS
}

package_libyaml() {
    pkgfiles=(
        lib/libyaml*so.*
    )
    depends=(musl)
    cd "${srcdir}/yaml-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}

package_libyaml-dev() {
    pkgfiles=(
        include
        lib/libyaml.a
        lib/libyaml.so
        lib/pkgconfig
    )
    depends=(libyaml)
    cd "${srcdir}/yaml-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}
