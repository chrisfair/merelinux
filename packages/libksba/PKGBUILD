pkgname=(libksba libksba-dev)
pkgver=1.3.3
pkgrel=1
pkgdesc='A library to make it easier to work with X.509 certificates and CMS data'
arch=(x86_64)
url='https://www.gnupg.org/'
license=(GPL3)
groups=(base)
depends=()
makedepends=(libgpg-error-dev)
options=()
changelog=ChangeLog
source=(
    "https://www.gnupg.org/ftp/gcrypt/${pkgname}/${pkgname}-${pkgver}.tar.bz2"
)

sha256sums=(
    0c7f5ffe34d0414f6951d9880a46fcc2985c487f7c36369b9f11ad41131c7786
)


build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
      ./configure --prefix='' \
        --enable-static
    make $MAKEFLAGS
}

package_libksba() {
    pkgfiles=(
        lib/libksba.so.*
    )
    depends=(libgpg-error)
    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}

package_libksba-dev() {
    pkgfiles=(
        bin
        include
        lib/libksba.a
        lib/libksba.so
        share/aclocal
    )
    depends=(libksba)
    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}
