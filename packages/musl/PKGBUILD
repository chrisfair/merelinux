# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=(musl musl-dev)
pkgver=1.1.16
pkgrel=2
pkgdesc='An implementation of the C/POSIX standard library.'
arch=('x86_64')
url='http://www.musl-libc.org'
license=(LGPL BSD)
groups=('base')
depends=()
makedepends=()
options=()
changelog=ChangeLog
source=(
    "http://www.etalabs.net/musl/releases/${pkgname}-${pkgver}.tar.gz"
)
sha256sums=(
    937185a5e5d721050306cf106507a006c3f1f86d86cd550024ea7be909071011
)


build() {
    cd "${srcdir}/${pkgbase}-${pkgver}"
    unset CFLAGS CXXFLAGS
    ./configure --prefix=/
    make
}

package_musl() {
    pkgfiles=(
        bin/ldd
        lib/libc.so
        "lib/ld-musl-${arch}.so.1"
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdirbase}/dest" install
    cd "${pkgdirbase}/dest"
    install -d bin
    ln -sf ../lib/libc.so bin/ldd
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}

package_musl-dev() {
    pkgfiles=(
        include
        lib/*.a
        lib/*.o
    )
    depends=(musl linux-headers)
    cd "${pkgdirbase}/dest"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}
