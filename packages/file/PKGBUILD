# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

rationale='file is used by many build scripts'
pkgname=(file file-dev)
pkgver=5.35
pkgrel=1
pkgdesc='A file-type guesser'
arch=('x86_64')
url='http://darwinsys.com/file/'
license=('BSD')
groups=('base')
depends=()
makedepends=()
options=()
changelog=ChangeLog
source=(
    "ftp://ftp.astron.com/pub/file/${pkgname}-${pkgver}.tar.gz"
)

sha256sums=(
    30c45e817440779be7aac523a905b123cba2a6ed0bf4f5439e1e99ba940b5546
)


build() {
    cd "${srcdir}/${pkgbase}-${pkgver}"
    sed -i 's/misc/file/' configure
    LDFLAGS='-Wl,-static' ./configure --prefix='' \
      --disable-shared \
      --enable-static
    make V=1
}

package_file() {
    options=()
    pkgfiles=(
        bin/file
        share/file/magic.mgc
    )
    cd "$srcdir/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdirbase}/dest" install
    cd "${pkgdirbase}/dest"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
}

package_file-dev() {
    pkgfiles=(
        include
        lib
    )
    cd "${pkgdirbase}/dest"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
}
