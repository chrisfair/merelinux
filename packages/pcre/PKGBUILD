# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=(pcre libpcre libpcre-dev)
pkgver=8.40
pkgrel=1
pkgdesc='Perl Compatible Regular Expressions'
arch=(x86_64)
url='http://pcre.org'
license=(GPL)
groups=(base)
depends=()
makedepends=(libtool)
options=()
changelog=ChangeLog
source=(
    "ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/pcre-${pkgver}.tar.bz2"
)
sha256sums=(
    00e27a29ead4267e3de8111fcaa59b132d0533cdfdbdddf4b0604279acbcf4f4
)


build() {
    cd "${srcdir}/${pkgbase}-${pkgver}"
    autoreconf -i
    ./configure --prefix='' \
        --enable-utf8 \
        --enable-unicode-properties
    make
}

package_pcre() {
    pkgfiles=(
        bin
    )
    depends=(libpcre)

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdirbase}/dest" install
    cd "${pkgdirbase}/dest"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
    rm "${pkgdir}/bin/pcre-config"
}

package_libpcre() {
    pkgfiles=(
        lib/libpcre*.so.*
    )
    depends=(musl)

    cd "${pkgdirbase}/dest"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
}

package_libpcre-dev() {
    pkgfiles=(
        bin/pcre-config
        include
        lib/*.so
        lib/*.a
        lib/pkgconfig
    )
    depends=(libpcre)

    cd "${pkgdirbase}/dest"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
}
